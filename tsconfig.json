{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "ts-node": {
    "esm": true,
    "files": true,
    "experimentalResolver": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "swc": true,
    "preferTsExts": true,
  },
  "files": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "module": "ES6",
    "target": "ES6",
    "baseUrl": "./src",
    "noImplicitOverride": false,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}